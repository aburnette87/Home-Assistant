# .editorconfig for Home Assistant repository

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files (Home Assistant)
[*.yaml]
indent_style = space
indent_size = 2

# YML alternative
[*.yml]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Configuration files
[*.conf]
indent_style = space
indent_size = 2

# CSV files
[*.csv]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
